# Database Configuration
DATABASE_URL="mysql://username:password@localhost:3306/shots_stories"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Server Configuration
PORT=3001
NODE_ENV="development"

# CORS Configuration
FRONTEND_URL="http://localhost:5173"

# Image Upload Configuration
MAX_FILE_SIZE=12582912  # 12MB flexible limit for ultra-quality
MAX_FILES_PER_UPLOAD=20  # Allow more files for gallery uploads
COMPRESSION_QUALITY=92  # Higher quality (92%)
MAX_IMAGE_WIDTH=3840    # Allow 4K width
MAX_IMAGE_HEIGHT=2160   # Allow 4K height

# Ultra-Quality Compression Settings
USE_ADVANCED_COMPRESSION=true  # Use smart compression algorithm (recommended)
PREFER_WEBP=true              # Use WebP format for better compression (recommended)
ULTRA_QUALITY_MODE=true       # Prioritize quality over strict size limits (recommended)